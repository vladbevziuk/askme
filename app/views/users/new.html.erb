<div class = "container">
  <h2 class = "title"> Join and ask! </h2>

  <div class = "mt">
    <%= form_with model: @user do |form| %>
      <p><% form.label  :name, "User name" %> </p>
      <p><% form.text_field :name, class: 'form-text-field' %> </p>

      <p class = "mt"><% form.label  :nickname, "Surname" %> </p>
      <p><% form.text_field :nickname, class: 'form-text-field' %> </p>

      <p class = "mt"><% form.label  :email, "Email" %> </p>
      <p><% form.text_field :email, class: 'form-text-field' %> </p>

      <p class = "mt-lg"><% form.submit 'Register', class: 'button button-main' %></p>
    <% end %>
  </div>
</div>
